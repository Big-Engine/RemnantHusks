		 //-------------------------------------------------------
	 
		 /*Put any functionsthat are only used in Scene 4, Event X here.*/
		 
		 bool Trigger_DoorScare_FirstClose(const tString &in asParent, const tString &in asChild, int alState)
		 {
			if(alState==-1 && !mbTriggeredFirst)
			{
				SlideDoor_SetOpenAmount("Door_Scare", 0.0f, false);
				Sound_Play("DoorScare_CloseSound", 0.0f, false);
				mbTriggeredFirst = true;
			}
			return true;
		 }
		 
		 void DoorScare_Button_ConnectionStateChange(const tString &in asEntity, int alState)
		 {
			if(alState==1)
			{
				Map_AddTimer("DoorScareTimer", 0.45f, "DoorScareSlam");
				cLux_AddDebugMessage("Pressed Button", false);
			}
		 }
		 
		 void DoorScareSlam(const tString &in asTimer)
		 {
			SlideDoor_SetClosed("Door_Scare", true, true);
			SlideDoor_SetOpenAmount("Door_Scare", 0.0f, true);
			Sound_CreateAtEntity("SlamSound", "Entities_Station/doors/slidedoor_stairs/open_end", "Player");
			Button_SetLocked("Door_Scare_Button", true, true);
			cLux_AddDebugMessage("Slammed the door", false);
		 }
	 
