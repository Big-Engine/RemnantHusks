			}
			else if(Sequence_DoStepAndWait(0.75f))
			{
				Prop_MoveLinearTo("TextBlock_4","TextMoveArea_4",5,3,0,true);
			}
			else if(Sequence_DoStepAndWait(0.75f))
			{
				Prop_MoveLinearTo("TextBlock_5","TextMoveArea_5",5,3,0,true);
			}
			else if(Sequence_DoStepAndWait(3))
			{
				Prop_MoveLinearTo("TextBlock_6","TextMoveArea_6",1,0.05f,0,true);
			}
			else if(Sequence_DoStepAndWait(0.75f))
			{
				Prop_MoveLinearTo("TextBlock_7","TextMoveArea_7",5,3,0,true);
			}
			else if(Sequence_DoStepAndWait(0.75f))
			{
				Prop_MoveLinearTo("TextBlock_8","TextMoveArea_8",5,3,0,true);
			}
			else if(Sequence_DoStepAndWait(3))
			{
				Prop_MoveLinearTo("TextBlock_9","TextMoveArea_9",1,0.05f,0,true);
			}
			else if(Sequence_DoStepAndWait(1))
			{
				Prop_MoveLinearTo("TextBlock_10","TextMoveArea_10",5,3,0,true);
			}
			else if(Sequence_DoStepAndWait(2))
			{
				Prop_MoveLinearTo("TextBlock_11","TextMoveArea_11",5,3,0,true);
			}
			else if(Sequence_DoStepAndWait(1))
			{
				Prop_MoveLinearTo("TextBlock_12","TextMoveArea_12",5,3,0,true);
			}
			else if(Sequence_DoStepAndWait(1))
			{
				Prop_MoveLinearTo("TextBlock_13","TextMoveArea_13",5,3,0,true);
				mStaticEffect = Effect_Screen_Start("00_04_scan_noise.mat", cVector2f(0.5, 0.5), cVector2f(2,1),  1, 5, 0.75f, 0.01f);
				Sound_CreateAtEntity("ScanStartup","Entities_Special/Equipment/scanner/omicron/omicron_scan_seq_success","Player",0.0f,false,1.0f);
			}
			else if(Sequence_DoStepAndWait(1.5f))
			{
				Prop_MoveLinearTo("TextBlock_14","TextMoveArea_14",5,1,0,true);
			}
			else if(Sequence_DoStepAndWait(1.5f))
			{
				Prop_MoveLinearTo("TextBlock_15","TextMoveArea_15",5,1,0,true);
			}
			else if(Sequence_DoStepAndWait(1.5f))
			{
				Prop_MoveLinearTo("TextBlock_16","TextMoveArea_16",5,1,0,true);
			}
			else if(Sequence_DoStepAndWait(0.5f))
			{
				CameraAnimation_End();
				Effect_VideoDistortion_Start(1.0f,0.25f,0.25f,0.25f,0.0f);
				Player_SetHealth(0.1f);
				Player_ShowCrossHairIcons(true);
				Player_SetFlashlightDisabled(false);
				Player_Teleport("IntroTeleport",true);
				CameraAnimation_Begin("WakeUpAnimation", "", true);
			}
			
			Sequence_End();
		 }
