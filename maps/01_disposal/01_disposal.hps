		 cSequenceStatesData mStartSequence;
		 
		 void Seq_Start(const tString &in asTimer)
		 {
			Sequence_Begin("Seq_Start", mStartSequence);
			
			Sequence_Wait(3);
			
			if(Sequence_DoStepAndWait(0.75f))
			{
				Prop_MoveLinearTo("TextBlock_1","TextMoveArea_1",5,1,0,true);
			}
			else if(Sequence_DoStepAndWait(3))
			{
