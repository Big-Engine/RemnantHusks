		 /////////////////////////////////////////
		 // Event *Incinerator Surge*
		 //{//////////////////////////////////////
	 
		 //-------------------------------------------------------
	 
		 /*Put any variables that are only used in Scene 2, Event X here.*/
		 
		 bool mbTriggeredSurge = false;
		 float boxBrightness = 0.01f;
		 int SurgeTimerLoop = 0;
	 
		 //-------------------------------------------------------
	 
		 /*Put any functions that are only used in Scene 2, Event X here.*/
		 
		 bool Trigger_Surge(const tString &in asParent, const tString &in asChild, int alState)
		 {
			if(alState==1 && !mbTriggeredSurge)
			{
				//mbTriggeredSurge = true; DON'T FORGET TO REENABLE THIS
				Effect_Shake_Start(0.25f,1,0.5f,3,cVector3f(1, 1, 1),0);
				Map_AddTimer("IncineratorSurgeTimer", 0.0000001f, "IncineratorSurgeTimer");
			}
			return true;
		 }
		 
		 void IncineratorSurgeTimer(const tString &in asTimer)
			{
				if(SurgeTimerLoop < 100)
				{
					boxBrightness += 0.5f;
					Light_SetBrightness("AmbientBoxLight", boxBrightness);
					SurgeTimerLoop++;
					cLux_AddDebugMessage(""+SurgeTimerLoop, false);
					Map_AddTimer("IncineratorSurgeTimer", 0.0000001f, "IncineratorSurgeTimer");
				}
				else if(SurgeTimerLoop >= 100)
				{
					Map_AddTimer("IncineratorCoolDownTimer", 0.0000001f, "IncineratorCoolDownTimer");
				}
			}
			
		 void IncineratorCoolDownTimer(const tString &in asTimer)
		 {
			if(SurgeTimerLoop > 0)
			{
				boxBrightness -= 0.5f;
				Light_SetBrightness("AmbientBoxLight", boxBrightness);
				SurgeTimerLoop--;
				cLux_AddDebugMessage(""+SurgeTimerLoop, false);
				Map_AddTimer("IncineratorCoolDownTimer", 0.0000001f, "IncineratorCoolDownTimer");
			}
		 }
		 
		 //-------------------------------------------------------
	 
		 //} END Event *Incinerator Surge**
	 
